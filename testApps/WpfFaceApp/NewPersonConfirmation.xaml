<Window x:Class="WpfFaceApp.NewPersonConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFaceApp"
        mc:Ignorable="d"
        Title="NewPersonConfirmation" Height="307.958" Width="459.947"
        Closing="Window_Closing"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image x:Name="imgPerson" Grid.ColumnSpan="2"></Image>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Grid.ColumnSpan="2">
            <TextBox x:Name="txtName" Width="300" Margin="5"></TextBox>
            <Button x:Name="btnOK" Width="60" Margin="5" Click="btnOK_Click">OK</Button>
            <Button x:Name="btnCancel" Width="60" Margin="5" Click="btnCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
